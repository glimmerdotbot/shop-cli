{
  "name": "shop-cli",
  "version": "0.1.6",
  "description": "An agent-friendly command-line interface for managing Shopify stores",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "require": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "bin": {
    "shop-cli": "bin/shop-cli.js",
    "shop": "bin/shop.js"
  },
  "files": [
    "dist/**/*.js",
    "dist/**/*.d.ts",
    "dist/**/*.graphql",
    "bin",
    "schema",
    "README.md",
    "LICENSE"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "schema:admin": "node scripts/download-admin-schema.js",
    "schema:introspection": "node scripts/generate-introspection-json.js",
    "schema:setup": "node scripts/setup-api-version.js",
    "codegen:admin": "genql --schema schema/2026-04.graphql --output src/generated/admin-2026-04 --sort -S ARN:string -S BigInt:string -S Color:string -S Date:string -S DateTime:string -S Decimal:string -S FormattedString:string -S HTML:string -S JSON:unknown -S Money:string -S StorefrontID:string -S URL:string -S UnsignedInt64:string -S UtcOffset:string",
    "codegen:help": "tsx scripts/extract-schema-help.ts",
    "dev:shop-name": "tsx dev/shop-name.ts",
    "dev:shop": "node scripts/dev-shop.js",
    "build": "node scripts/build-package.js",
    "prepack": "npm run build",
    "check:help": "tsx scripts/check-help-coverage.ts",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "test": "npm run typecheck && vitest run",
    "test:graphql:manifest": "tsx scripts/generate-graphql-test-manifest.ts",
    "test:graphql": "vitest run",
    "test:watch": "vitest"
  },
  "author": "Botanica Studios",
  "license": "MIT",
  "dependencies": {
    "@genql/runtime": "^2.10.0",
    "dotenv": "^17.3.1",
    "file-type": "^21.3.0",
    "graphql": "^16.12.0",
    "json5": "^2.2.3",
    "mime-types": "^3.0.2"
  },
  "devDependencies": {
    "@apollo/rover": "^0.37.0",
    "@genql/cli": "^6.3.3",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^25.2.3",
    "esbuild": "^0.25.10",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
